{% extends 'motos/baseMotos.html.twig' %}
{% block contenido %}
    {% for mensaje in app.flashes('success') %}
    <p> {{ mensaje }} </p>
    {% endfor %}
<h2>MOTOCICLETAS</h2>
    <div class="row row-cols-1 row-cols-md-2">
        {% for moto in motos %}
            <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{moto.img}}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Modelo:{{moto.modelo}} Marca: {{moto.marca}}</h5>
                        <p class="card-text">{{moto.color}}</p>
                        <a href="{{ path('showMotos',{id:moto.id}) }}" class="btn btn-primary">MÃ¡s Info</a>
                        <a href="{{ path('editMoto',{id:moto.id}) }}" class="btn btn-primary">Editar</a>
                        <a href="{{ path('deleteMoto',{id:moto.id}) }}" class="btn btn-primary">Borrar</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}    