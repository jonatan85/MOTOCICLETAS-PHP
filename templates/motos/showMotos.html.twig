{% extends 'motos/baseMotos.html.twig'%}
    {% block contenido %}
    <div class="container-show">
        <div class="row-show">
            <div class="col-show text-center"><h2> Modelo: {{moto.modelo}} Marca: {{moto.marca}} </h2></div>
        </div>
        <div class="row-show">
            <div class="co-show">
                <img class="img-show" src="{{moto.img}}">
            </div>
            <div class="col-show">
                <div class="row-show">
                    <div class="col-show"> Color: {{moto.color}}</div>
                    <div class="col-show"> C.v: {{moto.cv}}</div>
                    <div class="col-show"> cilindrada: {{moto.cilindrada}}</div>
                </div>
                <div>
                    <div class="col-show"> Descripcion: {{moto.description}}</div>
                </div>  
                <div class="row-show">
                    <ul>
                        {% for tipo in moto.Tipos%}
                            <li>
                                {{ tipo.nombre }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}      
                 
        