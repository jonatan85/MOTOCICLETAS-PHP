{% extends 'motos/baseMotos.html.twig'%}
{% block contenido %}
<div class="container">
    <div class="row">
        <div class="col text-center"><h2> Modelo: {{moto.modelo}} Marca: {{moto.marca}} </h2></div>
    </div>
    <div class="row">
        <div class="col">
            <img src="{{moto.img}}">
        </div>
        <div class="col">
            <div class="row">
                <div class="col"> Color: {{moto.color}}</div>
                <div class="col"> Color: {{moto.cv}}</div>
                <div class="col"> Color: {{moto.cilindrada}}</div>
            </div>
            <div class="row">
                <ul>
                    {% for tipo in moto.Tipos%}
                        <li>
                            {{ tipo.nombre }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}      
           
